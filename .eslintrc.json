{
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:promise/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 8
    },
    "plugins": ["promise"],
    "rules": {
        "camelcase": [
            "error"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-console": "off",
        "object-curly-newline": [
          "error",{
            "ObjectPattern": {"multiline": true}
            }
        ],
        "quotes": [
            "error",
            "double",
            { "allowTemplateLiterals": true }
        ],
        "semi": [
            "error"
        ],
        "vars-on-top": "error"
    }
}
